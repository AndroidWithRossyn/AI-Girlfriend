<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rent_bg_bottomsheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_cancel_24" />

        <TextView
            android:id="@+id/chooseFromGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/euclid_regular"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:text="Here you can see the preview of your avatar. you can change this image and choose new one."
            android:textColor="#99ffffff"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/UploadOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_70sdp"
            android:background="@drawable/rent_bg_border"
            android:fontFamily="@font/euclid_bold"
            android:padding="@dimen/_9sdp"
            android:text="Upload Other"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />


    </LinearLayout>
</RelativeLayout>
