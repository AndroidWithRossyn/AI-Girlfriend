<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_theme"
        android:tag="layout/activity_profile_0">

        <RelativeLayout
            android:id="@+id/mHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
           >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                android:src="@drawable/ic_back_shade" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/euclid_bold"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_50sdp"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:background="@drawable/ent_bg">

                    <LinearLayout
                        android:id="@+id/llContain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_250sdp">

                            <ImageView
                                android:id="@+id/imgAvatar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginVertical="@dimen/_10sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/char_1" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/gradient_frame"
                            android:fontFamily="@font/euclid_bold"
                            android:gravity="center"
                            android:text="Create Avatar"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurViewSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/ent_bg">

                    <LinearLayout
                        android:id="@+id/llContainSecond"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/blue_et_bg"
                            android:drawableEnd="@drawable/ic_forward"
                            android:fontFamily="@font/euclid_regular"
                            android:orientation="horizontal"
                            android:padding="@dimen/_9sdp"
                            android:text="Your name"
                            android:textAlignment="textStart"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/euclid_regular"
                                android:gravity="center"
                                android:text="Change name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/euclid_regular"
                                android:gravity="center"
                                android:text="Change name"
                                android:textColor="@color/app_theme_color"
                                android:textSize="@dimen/_14sdp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llPronounce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_20sdp"
                            android:layout_marginVertical="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/blue_et_bg"
                            android:drawableEnd="@drawable/ic_forward"
                            android:fontFamily="@font/euclid_regular"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/_9sdp"
                            android:text="Your name"
                            android:textAlignment="textStart"
                            android:textColor="@color/white">

                            <TextView
                                android:id="@+id/tvPronouns"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:fontFamily="@font/euclid_regular"
                                android:gravity="center"
                                android:text="Change status"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />
                        </LinearLayout>
                    </LinearLayout>
                </eightbitlab.com.blurview.BlurView>

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurViewThird"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:background="@drawable/ent_bg"
                    android:paddingVertical="@dimen/_20sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp">

                    <LinearLayout
                        android:id="@+id/llContainThird"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/header"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/aoboshi_one"
                            android:gravity="center"
                            android:text="Tweak Personality"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp" />

                        <LinearLayout
                            android:id="@+id/llContains"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_12sdp"
                                android:layout_marginVertical="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:fontFamily="@font/euclid_regular"
                                    android:text="Shy"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/euclid_regular"
                                    android:text="Flirty"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                            <SeekBar
                                android:id="@+id/mSetResultLength"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mLinearLayout"
                                android:max="10"
                                android:progress="7"
                                android:progressDrawable="@drawable/custom_seekbar"
                                android:progressTint="@color/app_theme_color"
                                android:thumb="@drawable/thumb"
                                android:thumbTint="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llContains2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_12sdp"
                                android:layout_marginVertical="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:fontFamily="@font/euclid_regular"
                                    android:text="Pessimistic"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:fontFamily="@font/euclid_regular"
                                    android:text="Optimistic"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                            <SeekBar
                                android:id="@+id/mSetResultLength2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mLinearLayout"
                                android:max="10"
                                android:progress="3"
                                android:progressDrawable="@drawable/custom_seekbar"
                                android:progressTint="@color/app_theme_color"
                                android:thumb="@drawable/thumb"
                                android:thumbTint="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llContains3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_12sdp"
                                android:layout_marginVertical="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:fontFamily="@font/euclid_regular"
                                    android:text="Ordinary"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="end"
                                    android:fontFamily="@font/euclid_regular"
                                    android:text="Mysterious"
                                    android:textAlignment="textEnd"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>

                            <SeekBar
                                android:id="@+id/mSetResultLength1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mLinearLayout"
                                android:max="10"
                                android:progress="5"
                                android:progressDrawable="@drawable/custom_seekbar"
                                android:progressTint="@color/app_theme_color"
                                android:thumb="@drawable/thumb"
                                android:thumbTint="@color/white" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/euclid_bold"
                            android:src="@drawable/next"
                            android:text="Next"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>
                </eightbitlab.com.blurview.BlurView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</layout>